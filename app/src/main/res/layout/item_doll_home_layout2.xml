<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="158.33dp"
        android:layout_height="190.67dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_tag_yellow"
                android:layout_width="57.33dp"
                android:layout_height="21.33dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/tag_yellow_bg" />

            <TextView
                android:id="@+id/tv_tag_title"
                style="@style/EditTextViewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.67dp"
                android:layout_marginEnd="10.33dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:text="空闲中"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdv_pic"
                android:layout_width="match_parent"
                android:layout_height="129.33dp"
                android:layout_marginTop="22.33dp"
                app:actualImageScaleType="fitXY"
                app:placeholderImage="@drawable/gamehome_chanpin_bg"
                app:placeholderImageScaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_below="@+id/sdv_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:text="龙珠系列"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_below="@+id/sdv_pic"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="14sp"
                android:textColor="#FFC200"
                android:text="龙珠系列"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>