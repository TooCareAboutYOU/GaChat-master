<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical" >
    <ImageView
        android:id="@+id/iv"
        android:layout_width="21dp"
        android:layout_height="16.33dp"
        android:layout_marginStart="79dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/user_icon_zuanshi"/>

    <TextView
        android:id="@+id/tv_DiamondsCount"
        style="@style/EditTextViewTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14.33dp"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv"
        android:textSize="13.33sp"
        android:text="200钻"/>

    <TextView
        android:id="@+id/tv_Money"
        style="@style/EditTextViewTheme"
        android:layout_width="79.27dp"
        android:layout_height="25.93dp"
        android:layout_marginStart="201.67dp"
        android:paddingStart="14.67dp"
        android:paddingTop="3.33dp"
        android:paddingEnd="14.47dp"
        android:paddingBottom="3.33dp"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:text="￥200.00"
        android:background="@drawable/shape_rectangle_blue"/>

</RelativeLayout>
