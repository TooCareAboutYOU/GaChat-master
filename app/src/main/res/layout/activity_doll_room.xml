<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_waitpairing">

    <FrameLayout
        android:id="@+id/fl_FullScreenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160.1dp"/>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:src="@drawable/icon_return"/>

    <TextView
        android:id="@+id/tv_roomMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:text="房间人数："/>

    <TextView
        android:id="@+id/tv_CatchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="right"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="26.67dp"
        android:layout_height="26.67dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="255.33dp"
        android:layout_gravity="end"
        android:src="@drawable/icon_doll_set"/>

    <ImageView
        android:id="@+id/img_camera"
        android:layout_width="26.67dp"
        android:layout_height="26.67dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="210.67dp"
        android:layout_gravity="end"
        android:src="@drawable/icon_doll_cemare"/>


    <ImageView
        android:id="@+id/img_recharge"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="190.53dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/icon_doll_recharge"/>

    <RelativeLayout
        android:id="@+id/rl_userInfo"
        android:layout_width="match_parent"
        android:layout_height="160.1dp"
        android:background="@android:color/white"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_needsurplus"
            android:layout_above="@+id/tv_surplusDiamonds"
            style="@style/EditTextViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text=""/>

        <TextView
            android:id="@+id/tv_surplusDiamonds"
            style="@style/EditTextViewTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10.07dp"
            android:layout_marginBottom="32dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:text=""/>

        <ImageView
            android:id="@+id/iv_roomInfo"
            android:layout_width="53.33dp"
            android:layout_height="53.33dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="27.67dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/icon_doll_user"/>
    </RelativeLayout>

    <!--抓取菜单-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_ActionCatch"
        android:layout_width="match_parent"
        android:layout_height="160.1dp"
        android:layout_gravity="bottom|center"
        android:paddingStart="30.37dp"
        android:paddingEnd="0dp"
        android:background="@android:color/white">
        <!--方向-->
        <RelativeLayout
            android:id="@+id/orientation_control"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_above="@+id/group_two"
                android:layout_width="170.01dp"
                android:layout_height="56.67dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_actionTop"
                    android:layout_width="56.67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_catch_top"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/group_two"
                android:layout_width="170.01dp"
                android:layout_height="56.67dp"
                android:layout_centerVertical="true"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_actionLeft"
                    android:layout_width="56.67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_catch_left"/>
                <ImageView
                    android:id="@+id/iv_actionRight"
                    android:layout_width="56.67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_catch_right"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/group_two"
                android:layout_width="170.01dp"
                android:layout_height="56.67dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_actionBottom"
                    android:layout_width="56.67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:src="@drawable/icon_catch_down"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <!--抓取-->
        <RelativeLayout
            android:id="@+id/iv_catch"
            android:layout_width="89.67dp"
            android:layout_height="90dp"
            android:layout_marginEnd="29.17dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_catch">
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="60S"
                android:textSize="21sp"/>
        </RelativeLayout>

    </RelativeLayout>

    <!--申请按钮-->
    <RelativeLayout
        android:id="@+id/rl_control"
        android:layout_width="92.33dp"
        android:layout_height="92.33dp"
        android:orientation="vertical"
        android:layout_marginBottom="108.33dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/icon_doll_state_blue">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            tools:ignore="UselessParent">
            <TextView
                android:id="@+id/tv_titleControl"
                android:theme="@style/EditTextViewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:text="申请排队"/>
            <TextView
                android:id="@+id/tv_usermember"
                android:theme="@style/EditTextViewTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="0人排队"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
