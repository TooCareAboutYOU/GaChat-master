<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent" >
        <FrameLayout
             android:layout_width="251.33dp"
             android:layout_height="367.33dp"
             android:layout_centerInParent="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_comment_dialog"/>
                <ImageView
                    android:layout_width="100.67dp"
                    android:layout_height="100.67dp"
                    android:layout_marginTop="48.67dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="168dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="给对方做一下评价呗！"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="146dp"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:weightSum="3">
                        <TextView
                            android:id="@+id/tv_gotoLiked"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="对方很有趣，期待下"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#DBE3E9"/>
                        <TextView
                            android:id="@+id/tv_nervermeet"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="对方很无趣，不想再见到他"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.33dp"
                            android:layout_gravity="center_horizontal"
                            android:background="#DBE3E9"/>
                        <TextView
                            android:id="@+id/cancel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="返回"/>
                </LinearLayout>
        </FrameLayout>

</RelativeLayout>
